<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/lilac">

    <TextView
        android:id="@+id/tvHelpText"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="center"
        android:text="@string/home_text"
        app:layout_constraintBottom_toTopOf="@id/imgRedHawk"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgRedHawk"
        android:layout_width="301dp"
        android:layout_height="237dp"
        android:gravity="center"
        android:src="@mipmap/nav_launcher_round"
        android:text="@string/home_text"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@id/imgMSU"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnNav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nav_text"
        app:layout_constraintBottom_toTopOf="@id/imgMSU"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgRedHawk"
        android:onClick="Navigate"/>

    <ImageView
        android:id="@+id/imgMSU"
        android:layout_width="420dp"
        android:layout_height="224dp"
        android:gravity="center"
        android:src="@drawable/msu_label"
        android:text="@string/home_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>